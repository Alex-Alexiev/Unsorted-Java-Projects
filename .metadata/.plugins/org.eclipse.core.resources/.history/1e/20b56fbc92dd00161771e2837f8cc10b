import java.util.ArrayList;
import processing.core.PApplet;

public class World {

	ArrayList<Body> all = new ArrayList<Body>();
	PApplet applet;

	public World(PApplet applet) {		

		all.add(new Body(new Vector(500, 450), new Vector(0, 0), 10000, 10));
		all.add(new Body(new Vector(200, 100), new Vector(0, 2), 1, -1));
		
		this.applet = applet;
	}

	public Vector calculateForce(Body b) {
		Vector sum = new Vector();
		for (Body body : all) {
			if (body != b) {
				sum = sum.add(body.exertEForce(b));
			}
		}
		return sum;
	}
	
	public void itterate(){
		for(Body body: all){
			body.updatePosition();
			body.updateVelocity(applet);
			body.updateAcceleration(calculateForce(body));
		}
	}
	
	public void draw(){
		itterate();
		for(Body body: all){
			body.draw(applet);
		}
	}
	
	public void add(float x, float y){
		all.add(new Body(new Vector(x, y), new Vector(0, 2), 10, -1));
	}
}
